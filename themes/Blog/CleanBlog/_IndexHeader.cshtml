<div class="site-heading">
    @if(Context.String(BlogKeys.Greeting) != null)
    {
        <h1>@Context.String(BlogKeys.Greeting)</h1>
    }
    @if(Context.String(BlogKeys.Blurb) != null)
    {            
        @if(Context.String(BlogKeys.Greeting) != null)
        {
            <hr class="small">
        }
        <span class="subheading">@Context.String(BlogKeys.Blurb)</span>
    }
</div>